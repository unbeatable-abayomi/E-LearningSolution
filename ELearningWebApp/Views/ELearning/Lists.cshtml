@model IEnumerable<ELearningWebApp.Models.ELearningModel>

@{
    ViewData["Title"] = "Lists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lists</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursPerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prerequisites)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursPerDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prerequisites)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
